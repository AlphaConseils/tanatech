<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_quotation_tree_inherit" model="ir.ui.view">
        <field name="name">tanatech_sale_view_quotation_tree_inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="groups">tanatech_sale.commercial_group</attribute>
            </field>
        </field>
    </record>

    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="attributes">
                <attribute name="groups">tanatech_sale.commercial_group</attribute>
            </xpath>
            <group name="partner_details" position="attributes">
                <attribute name="groups">tanatech_sale.commercial_group</attribute>
            </group>
            <group name="partner_details" position="before">
                <field name="is_commercial" invisible="1"/>
            </group>
            <field name="partner_id" position="attributes">
                <attribute name="attrs">{'required': [('is_commercial', '=', True)]}</attribute>
            </field>
            <field name="partner_invoice_id" position="attributes">
                <attribute name="attrs">{'required': [('is_commercial', '=', True)]}</attribute>
            </field>
            <field name="partner_shipping_id" position="attributes">
                <attribute name="attrs">{'required': [('is_commercial', '=', True)]}</attribute>
            </field>
            <field name="pricelist_id" position="attributes">
                <attribute name="attrs">{'required': [('is_commercial', '=', True)]}</attribute>
            </field>
        </field>
    </record>
</odoo>