<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <data>
    
    <template id="inherit_report_delivery_document" inherit_id="stock.report_delivery_document">
      <xpath expr="//th[@name='th_sm_quantity']" position="after">
        <th></th>
        <th name="th_sm_price_unit"><strong>Price Unit</strong></th>
      </xpath>
        <xpath expr="//th[@name='th_sml_quantity']" position="after">
          <th></th>
          <th name="th_sml_price_unit"><strong>Price Unit</strong></th>
        </xpath>
    </template>

    <template id="inherit_stock_report_delivery_has_serial_move_line" inherit_id="stock.stock_report_delivery_has_serial_move_line">
      <xpath expr="//td[@name='move_line_lot_qty_done']" position="after">
        <td class="text-center small">
          <t t-if="move_line.x_studio_prix_unitaire">
            <span t-out="move_line.x_studio_prix_unitaire" />
          </t>
        </td>
      </xpath>
    </template>

    <template id="inherit_stock_report_delivery_aggregated_move_lines" inherit_id="stock.stock_report_delivery_aggregated_move_lines">
      <xpath expr="//td[@name='move_line_aggregated_qty_done']" position="after">
        <td class="text-center small">
          <t t-if="aggregated_lines[line]['price_unit']">
            <span t-out="aggregated_lines[line]['price_unit']" t-options="{'widget': 'float', 'precision': 2}" />  
          </t>
        </td>
      </xpath>
    </template>
  
  </data>
  

</odoo>
