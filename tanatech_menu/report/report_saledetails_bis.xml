<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_sale_details_bis">
            <t t-set="company" t-value="env.company" />
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="text-center">
                            <h2>Sales summary</h2>

                            <strong><t t-esc="date_start" t-options="{'widget': 'datetime'}" /> - <t
                                    t-esc="date_stop" t-options="{'widget': 'datetime'}" /></strong>
                        </div>


                        <h3>Payments</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach='payments' t-as='payment'>
                                    <td>
                                        <t t-esc="payment['name']" />
                                    </td>
                                    
                                    <td>
                                        <t t-esc="payment['total']"
                                            t-options="{'widget': 'float', 'precision': currency_precision}" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <br />

                        <h3>Taxes</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Tax Amount</th>
                                    <th>Base Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach='taxes' t-as='tax'>
                                    <td>
                                        <t t-esc="tax['name']" />
                                    </td>
                                    <td>
                                        <t t-esc="tax['tax_amount']"
                                            t-options="{'widget': 'float', 'precision': currency_precision}" />
                                    </td>
                                    <td>
                                        <t t-esc="tax['base_amount']"
                                            t-options="{'widget': 'float', 'precision': currency_precision}" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                        <br />
                        <h3>Refunds</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>N° order </th>
                                    <th>N° receive</th>
                                    <th>Customer</th>
                                    <th>Payment method</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach='refunds' t-as='refund'>
                                    <td>
                                        <t t-esc="refund.name" />
                                    </td>
                                    <td>
                                        <t t-esc="refund.pos_reference" />
                                    </td>
                                    
                                    <td>
                                        <span t-field="refund.partner_id" />
                                    </td>
                                    <td>
                                        <t t-esc="', '.join(refund.payment_ids.mapped('payment_method_id').mapped('name'))" />
                                    </td>

                                    <td>
                                        <t t-esc="abs(refund.amount_total)"
                                            t-options="{'widget': 'float', 'precision': currency_precision}" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <br />
                        <br />

                                <strong>Total: <t t-esc='total_paid' t-options="{'widget': 'float', 'precision': currency_precision}"/></strong>

                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>