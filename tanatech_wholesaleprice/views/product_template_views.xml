<odoo>
  <data>
    
    <record id="inherit_product_template_only_form_view" model="ir.ui.view">
      <field name="name">product.template.view.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <field name="categ_id" position="before">
          <field name="wholesaleprice_x" invisible="1" />
          <field name="wholesaleprice" widget="monetary" groups="tanatech_sale.pricelist_group" readonly="1" />
        </field>
      </field>
    </record>

    <record id="inherit_product_template_kanban_view" model="ir.ui.view">
      <field name="name">product.template.view.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_kanban_view"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='product_lst_price']" position="after">
          <div name="product_wholesaleprice" groups="tanatech_sale.pricelist_group">
            <field name="wholesaleprice_x" invisible="1" />
            Prix de gros: <field name="wholesaleprice" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
          </div>
        </xpath>
      </field>
    </record>

    <record id="inherit_product_template_tree_view" model="ir.ui.view">
      <field name="name">product.template.view.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_tree_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='list_price']" position="after">
          <field name="wholesaleprice_x" invisible="1" />
          <field name="wholesaleprice" />
        </xpath>
      </field>
    </record>

  </data>
</odoo>