<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="purchase.group_purchase_user" model="res.groups">
        <field name="name">User: Own Documents Only</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
        <field name="comment">the user will have access to his own data in the purchases application.</field>
    </record>

    <record id="group_purchase_user_all_leads" model="res.groups">
        <field name="name">User: All Documents</field>
        <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
        <field name="comment">the user will have access to all records of everyone in the purchases application.</field>
    </record>

    <record id="purchase.group_purchase_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
        <field name="implied_ids" eval="[(4, ref('tanatech_purchase.group_purchase_user_all_leads'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="purchase.purchase_user_account_move_line_rule" model="ir.rule">
        <field name="name">Personal Purchase User Account Move Line</field>
        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="domain_force">[('move_id.move_type', 'in', ('in_invoice', 'in_refund', 'in_receipt')), '|', ('move_id.invoice_user_id', '=', user.id), ('move_id.invoice_user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <record id="purchase_user_account_move_line_see_all" model="ir.rule">
        <field name="name">All Purchase User Account Move Line</field>
        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="domain_force">[('move_id.move_type', 'in', ('in_invoice', 'in_refund', 'in_receipt'))]</field>
        <field name="groups" eval="[(4, ref('tanatech_purchase.group_purchase_user_all_leads'))]"/>
    </record>

    <record id="purchase.purchase_user_account_move_rule" model="ir.rule">
        <field name="name">Personnal Purchase User Account Move</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[('move_type', 'in', ('in_invoice', 'in_refund', 'in_receipt')), '|', ('invoice_user_id', '=', user.id), ('invoice_user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <record id="purchase_user_account_move_see_all" model="ir.rule">
        <field name="name">All Purchase User Account Move</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[('move_type', 'in', ('in_invoice', 'in_refund', 'in_receipt'))]</field>
        <field name="groups" eval="[(4, ref('tanatech_purchase.group_purchase_user_all_leads'))]"/>
    </record>

    <record id="purchase_order_personal_rule" model="ir.rule">
        <field name="name">Personal Orders</field>
        <field ref="purchase.model_purchase_order" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <record id="purchase_order_see_all" model="ir.rule">
        <field name="name">All Orders</field>
        <field ref="purchase.model_purchase_order" name="model_id"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('tanatech_purchase.group_purchase_user_all_leads'))]"/>
    </record>

    <record id="purchase_order_line_personal_rule" model="ir.rule">
        <field name="name">Personal Order Lines</field>
        <field ref="purchase.model_purchase_order_line" name="model_id"/>
        <field name="domain_force">['|',('sale_order_id.user_id','=',user.id),('sale_order_id.user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <record id="purchase_order_line_see_all" model="ir.rule">
        <field name="name">All Order Lines</field>
        <field ref="purchase.model_purchase_order_line" name="model_id"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('tanatech_purchase.group_purchase_user_all_leads'))]"/>
    </record>

    <record id="account_invoice_send_personal_rule" model="ir.rule">
        <field name="name">Personal Invoice Send and Print</field>
        <field name="model_id" ref="account.model_account_invoice_send"/>
        <field name="domain_force">[('invoice_ids.move_type', 'in', ('in_invoice', 'in_refund', 'in_receipt')), '|', ('invoice_ids.invoice_user_id', '=', user.id), ('invoice_ids.invoice_user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <record id="account_invoice_send_rule_see_all" model="ir.rule">
        <field name="name">All Invoice Send and Print</field>
        <field name="model_id" ref="account.model_account_invoice_send"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('tanatech_purchase.group_purchase_user_all_leads'))]"/>
    </record>

    <record id="purchase_order_report_personal_rule" model="ir.rule">
        <field name="name">Personal Orders Analysis</field>
        <field ref="purchase.model_purchase_report" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <record id="purchase_order_report_see_all" model="ir.rule">
        <field name="name">All Orders Analysis</field>
        <field ref="purchase.model_purchase_report" name="model_id"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('tanatech_purchase.group_purchase_user_all_leads'))]"/>
    </record>

    <record id="account_invoice_report_personal_rule" model="ir.rule">
        <field name="name">Personal Invoices Analysis</field>
        <field name="model_id" ref="account.model_account_invoice_report"/>
        <field name="domain_force">['|', ('invoice_user_id', '=', user.id), ('invoice_user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <record id="account_invoice_report_see_all" model="ir.rule">
        <field name="name">All Invoices Analysis</field>
        <field name="model_id" ref="account.model_account_invoice_report"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('tanatech_purchase.group_purchase_user_all_leads'))]"/>
    </record>
    
</data>
</odoo>
