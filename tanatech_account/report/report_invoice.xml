<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="tanatech_report_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang" />
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                    t-call="account.report_invoice_document" t-lang="lang" />
            </t>
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang" />
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                    t-call="account.report_invoice_document" t-lang="lang" />
            </t>
        </t>
    </template>

    <template id="tanatech_report_invoice_with_payments">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang" />
                <t t-set="print_with_payments" t-value="True" />
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                    t-call="account.report_invoice_document" t-lang="lang" />
            </t>
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang" />
                <t t-set="print_with_payments" t-value="True" />
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                    t-call="account.report_invoice_document" t-lang="lang" />
            </t>
        </t>
    </template>

    <record id="tanatech_account_invoices" model="ir.actions.report">
        <field name="name">Invoices (A5)</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tanatech_account.tanatech_report_invoice_with_payments</field>
        <field name="report_file">tanatech_account.tanatech_report_invoice_with_payments</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="attachment">(object.state == 'posted') and ((object.name or
            'INV').replace('/','_')+'.pdf')</field>
        <field name="binding_model_id" ref="account.model_account_move" />
        <field name="binding_type">report</field>
        <field name="groups_id"
            eval="[(4, ref('account.group_account_invoice')),
(4, ref('account.group_account_readonly'))]" />
        <field name="paperformat_id" ref="tanatech_base.tanatech_paperformat" />
    </record>

    <record id="account_invoices_without_payment" model="ir.actions.report">
        <field name="name">Invoices without Payment(A5)</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tanatech_account.tanatech_report_invoice</field>
        <field name="report_file">tanatech_account.tanatech_report_invoice</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="attachment">(object.state == 'posted') and ((object.name or
            'INV').replace('/','_')+'.pdf')</field>
        <field name="binding_model_id" ref="account.model_account_move" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="tanatech_base.tanatech_paperformat" />
    </record>

</odoo>