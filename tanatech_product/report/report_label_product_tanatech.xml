<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="tanatech_ticket_fomat" model="report.paperformat">
            <field name="name">Tanatech Ticket</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">30</field>
            <field name="page_width">39</field>
            <field name="print_page_height">30</field>
            <field name="print_page_width">39</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">203</field>
        </record>

        <record id="label_product_product_tanatech" model="ir.actions.report">
            <field name="name">Tanatech variant (PDF)</field>
            <field name="model">product.product</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">tanatech_product.report_label_product_tanatech</field>
            <field name="report_file">tanatech_product.report_label_product_tanatech</field>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="tanatech_product.tanatech_ticket_fomat"/>
        </record>

        <record id="label_product_template_tanatech" model="ir.actions.report">
            <field name="name">Tanatech (PDF)</field>
            <field name="model">product.template</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">tanatech_product.report_label_product_tanatech</field>
            <field name="report_file">tanatech_product.report_label_product_tanatech</field>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="tanatech_product.tanatech_ticket_fomat"/>
        </record>

        <template id="report_label_product_tanatech">
            <t t-call="web.html_container">
            <t t-foreach="quantity_by_product.items()" t-as="int_product">
                <t t-set="product" t-value="env[active_model].search([('id', '=', int_product[0])])"/>
                <table style="height: 280px; width: 375px !important; float: left; background-color: white !important; font-family: 'Times New Roman', serif;">
                    <tr style="height: 100%">
                        <td style="vertical-align:middle !important;height: 100%">
                            <p style="font-size: 18px; width: 100%; text-align: center;">
                                <t t-esc="product.default_code"/>
                            </p>
                            <p style="font-size: 25px; width: 100%; text-align: center;">
                                <t t-esc="product.name"/>
                            </p>
                            <t t-if="price_included">
                                <p style="font-size: 28px; width: 100%; text-align: right;">
                                    <strong>Prix: </strong>
                                    <t t-if="product.is_product_variant">
                                        <strong class="o_label_price" t-field="product.lst_price" t-options="{'widget': 'monetary', 'label_price': True}"/>
                                    </t>
                                    <t t-else="">
                                        <strong class="o_label_price" t-field="product.list_price" t-options="{'widget': 'monetary', 'label_price': True}"/>
                                    </t>
                                </p>
                            </t>
                        </td>
                    </tr>
                </table>
            </t>
            </t>
        </template>

    </data>
</odoo>